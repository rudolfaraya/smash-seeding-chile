<% content_for :title, "Editar Perfil - Smash Seeding Chile" %>

<div class="min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-2xl mx-auto">
    <div class="text-center mb-8">
      <h2 class="text-3xl font-extrabold text-slate-100">
        Editar Perfil
      </h2>
      <p class="mt-2 text-sm text-slate-400">
        Actualiza tu información personal
      </p>
    </div>

    <div class="bg-slate-800/50 backdrop-blur-sm border border-slate-700 rounded-lg shadow-xl p-8">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
                   html: { method: :put }, 
                   local: true, 
                   class: "space-y-6",
                   data: { turbo: false }) do |f| %>
        
        <%= render "devise/shared/error_messages", resource: resource %>

        <div>
          <%= f.label :email, "Correo Electrónico", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                class: "appearance-none relative block w-full px-3 py-3 border border-slate-600 placeholder-slate-400 text-slate-100 bg-slate-700/50 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm transition-colors duration-200" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="bg-yellow-900/50 border border-yellow-700 text-yellow-200 px-4 py-3 rounded-md">
            <p class="text-sm">
              Esperando confirmación para: <%= resource.unconfirmed_email %>
            </p>
          </div>
        <% end %>

        <div>
          <%= f.label :password, "Nueva Contraseña", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <p class="text-xs text-slate-400 mb-2">Déjalo en blanco si no quieres cambiarla</p>
          <%= f.password_field :password, 
                autocomplete: "new-password",
                class: "appearance-none relative block w-full px-3 py-3 border border-slate-600 placeholder-slate-400 text-slate-100 bg-slate-700/50 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm transition-colors duration-200",
                placeholder: "Nueva contraseña" %>
          <% if @minimum_password_length %>
            <p class="text-xs text-slate-400 mt-1">Mínimo <%= @minimum_password_length %> caracteres</p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirmar Nueva Contraseña", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <%= f.password_field :password_confirmation, 
                autocomplete: "new-password",
                class: "appearance-none relative block w-full px-3 py-3 border border-slate-600 placeholder-slate-400 text-slate-100 bg-slate-700/50 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm transition-colors duration-200",
                placeholder: "Confirma tu nueva contraseña" %>
        </div>

        <div>
          <%= f.label :current_password, "Contraseña Actual", class: "block text-sm font-medium text-slate-300 mb-2" %>
          <p class="text-xs text-slate-400 mb-2">Necesitamos tu contraseña actual para confirmar los cambios</p>
          <%= f.password_field :current_password, 
                autocomplete: "current-password",
                class: "appearance-none relative block w-full px-3 py-3 border border-slate-600 placeholder-slate-400 text-slate-100 bg-slate-700/50 rounded-md focus:outline-none focus:ring-2 focus:ring-red-500 focus:border-red-500 focus:z-10 sm:text-sm transition-colors duration-200",
                placeholder: "Tu contraseña actual" %>
        </div>

        <div class="flex items-center justify-between pt-4">
          <%= f.submit "Actualizar Perfil", 
                class: "flex-1 mr-3 py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200 shadow-lg hover:shadow-xl" %>
          
          <%= link_to "Cancelar", :back, 
                class: "py-3 px-4 border border-slate-600 text-sm font-medium rounded-md text-slate-300 bg-slate-700 hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 transition-colors duration-200" %>
        </div>
      <% end %>

      <!-- Sección de eliminación de cuenta -->
      <div class="mt-8 pt-8 border-t border-slate-700">
        <h3 class="text-lg font-medium text-slate-100 mb-4">Zona de Peligro</h3>
        <div class="bg-red-900/20 border border-red-700/50 rounded-md p-4">
          <div class="flex items-start">
            <svg class="h-5 w-5 text-red-400 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            <div class="flex-1">
              <h4 class="text-sm font-medium text-red-200">Eliminar Cuenta</h4>
              <p class="text-sm text-red-300 mt-1">
                Una vez que elimines tu cuenta, no hay vuelta atrás. Por favor, ten cuidado.
              </p>
              <div class="mt-3">
                <%= button_to "Eliminar mi cuenta", registration_path(resource_name), 
                      data: { 
                        confirm: "¿Estás seguro? Esta acción no se puede deshacer.",
                        turbo: false 
                      }, 
                      method: :delete,
                      class: "py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-red-700 hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
