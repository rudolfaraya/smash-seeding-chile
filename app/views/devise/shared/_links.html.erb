<div class="text-center space-y-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "¿Ya tienes cuenta? Inicia sesión", new_user_session_path, 
          class: "text-sm text-red-400 hover:text-red-300 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "¿No tienes cuenta? Regístrate", new_user_registration_path, 
          class: "text-sm text-red-400 hover:text-red-300 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "¿Olvidaste tu contraseña?", new_user_password_path, 
          class: "text-sm text-slate-400 hover:text-slate-300 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "¿No recibiste las instrucciones de confirmación?", new_user_confirmation_path, 
          class: "text-sm text-slate-400 hover:text-slate-300 transition-colors duration-200" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <% if provider.to_s == 'startgg' %>
        <!-- Botón específico para start.gg -->
        <%= button_to omniauth_authorize_path(resource_name, provider), 
              data: { turbo: false },
              class: "w-full mt-4 py-3 px-4 bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700 text-white rounded-md font-medium transition-all duration-200 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-purple-500 focus:ring-offset-2 shadow-lg" do %>
          <div class="flex items-center justify-center space-x-3">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
            </svg>
            <span>Iniciar sesión con start.gg</span>
          </div>
        <% end %>
        
        <!-- Separador -->
        <div class="mt-6 relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-slate-600"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-slate-800 text-slate-400">o continúa con email</span>
          </div>
        </div>
      <% else %>
        <%= button_to "Iniciar sesión con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), 
              data: { turbo: false },
              class: "w-full mt-3 py-2 px-4 border border-slate-600 rounded-md text-sm font-medium text-slate-300 bg-slate-700 hover:bg-slate-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-500 transition-colors duration-200" %>
      <% end %>
    <% end %>
  <% end %>
</div>
