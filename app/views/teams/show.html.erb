<div class="container mx-auto py-6">
  <!-- Header del equipo -->
  <div class="mb-8">
    <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between">
      <!-- Información del equipo -->
      <div class="flex items-center mb-4 lg:mb-0">
        <div class="flex-shrink-0 mr-6">
          <% if @team.logo_image.attached? %>
            <%= image_tag @team.logo_image, 
                  alt: @team.name,
                  class: "w-32 h-32 object-contain rounded-xl bg-slate-800",
                  style: "width: 128px !important; height: 128px !important; object-fit: contain !important; max-width: none !important; max-height: none !important;" %>
          <% elsif @team.logo.present? %>
            <%= image_tag @team.logo, 
                  alt: @team.name,
                  class: "w-32 h-32 object-contain rounded-xl bg-slate-800",
                  style: "width: 128px !important; height: 128px !important; object-fit: contain !important; max-width: none !important; max-height: none !important;" %>
          <% else %>
            <div class="w-32 h-32 bg-gradient-to-r from-purple-600 to-purple-800 rounded-xl flex items-center justify-center border-2 border-purple-500 shadow-lg">
              <span class="text-white font-bold text-3xl"><%= @team.acronym %></span>
            </div>
          <% end %>
        </div>
        
        <div>
          <h1 class="text-3xl lg:text-4xl font-bold text-slate-100 mb-2">
            <%= @team.name %>
          </h1>
          <div class="flex items-center space-x-4 text-slate-400">
            <span class="px-3 py-1 bg-purple-900 text-purple-200 rounded-lg text-sm font-medium">
              <%= @team.acronym %>
            </span>
            <span class="text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
              </svg>
              <%= @team.players_count %> jugadores
            </span>
          </div>
          <% if @team.description.present? %>
            <p class="text-slate-300 mt-2 max-w-2xl"><%= @team.description %></p>
          <% end %>
        </div>
      </div>
      
      <!-- Botones de acción -->
      <div class="flex space-x-3">
        <%= link_to teams_path, 
              class: "inline-flex items-center px-4 py-2 border border-slate-500 text-slate-300 bg-slate-800 rounded-md hover:bg-slate-700 transition-colors" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
          </svg>
          Volver a Equipos
        <% end %>
        
        <% if user_signed_in? %>
          <button 
            onclick="openEditTeamModal()" 
            class="inline-flex items-center px-4 py-2 border border-blue-600 text-blue-400 bg-slate-800 rounded-md hover:bg-blue-900 hover:text-blue-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
            </svg>
            Editar Equipo
          </button>
          
          <button 
            onclick="openDeleteTeamModal()" 
            class="inline-flex items-center px-4 py-2 border border-red-600 text-red-400 bg-slate-800 rounded-md hover:bg-red-900 hover:text-red-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            Eliminar Equipo
          </button>
          
          <button 
            onclick="openAddPlayerModal()" 
            class="inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
            </svg>
            Agregar Jugador
          </button>
        <% else %>
          <button 
            onclick="openAddPlayerModal()" 
            class="inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
              <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
            </svg>
            Agregar Jugador
          </button>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Lista de jugadores -->
  <div class="bg-slate-800 rounded-lg shadow-lg border border-slate-600">
    <div class="px-6 py-4 border-b border-slate-600">
      <h2 class="text-xl font-semibold text-slate-100">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline mr-2 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
        </svg>
        Jugadores del Equipo
      </h2>
    </div>
    
    <div id="team-players-list">
      <% if @players.any? %>
        <div class="divide-y divide-slate-600">
          <% @players.each do |player| %>
            <div class="p-6 hover:bg-slate-700 transition-colors player-item" data-player-id="<%= player[:id] %>">
              <div class="flex items-center justify-between">
                <!-- Información del jugador -->
                <div class="flex items-center">
                  <div class="flex-shrink-0 mr-4">
                    <div class="h-12 w-12 rounded-full bg-gradient-to-r from-red-600 to-red-800 flex items-center justify-center border-2 border-red-500">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-slate-100" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                      </svg>
                    </div>
                  </div>
                  
                  <div>
                    <div class="flex items-center">
                      <h3 class="text-lg font-medium text-slate-100 mr-3">
                        <%= player[:entrant_name] || "Sin tag" %>
                      </h3>
                      <% if player[:is_primary] == 1 %>
                        <span class="px-2 py-1 bg-yellow-600 text-yellow-100 rounded text-xs font-medium">
                          Equipo Principal
                        </span>
                      <% else %>
                        <span class="px-2 py-1 bg-slate-600 text-slate-300 rounded text-xs">
                          Equipo Secundario
                        </span>
                      <% end %>
                    </div>
                    <p class="text-slate-400 text-sm"><%= player[:name] || "Sin nombre" %></p>
                    
                    <!-- Estadísticas del jugador -->
                    <div class="flex items-center space-x-4 mt-2 text-xs text-slate-500">
                      <span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.799-2.034c-.784-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        <%= player[:events_count] || 0 %> eventos
                      </span>
                      <span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 inline mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path fill-rule="evenodd" d="M12.395 2.553a1 1 0 00-1.45-.385c-.345.23-.614.558-.822.88-.214.33-.403.713-.57 1.116-.334.804-.614 1.768-.84 2.734a31.365 31.365 0 00-.613 3.58 2.64 2.64 0 01-.945-1.067c-.328-.68-.398-1.534-.398-2.654A1 1 0 005.05 6.05 6.981 6.981 0 003 11a7 7 0 1011.95-4.95c-.592-.591-.98-.985-1.348-1.467-.363-.476-.724-1.063-1.207-2.03zM12.12 15.12A3 3 0 017 13s.879.5 2.5.5c0-1 .5-4 1.25-4.5.5 1 .786 1.293 1.371 1.879A2.99 2.99 0 0113 13a2.99 2.99 0 01-.879 2.121z" clip-rule="evenodd" />
                        </svg>
                        <%= player[:tournaments_count] || 0 %> torneos
                      </span>
                    </div>
                  </div>
                </div>
                
                <!-- Acciones -->
                <% if user_signed_in? %>
                  <div class="flex space-x-2">
                    <% unless player[:is_primary] == 1 %>
                      <button 
                        data-player-id="<%= player[:id] %>"
                        class="make-primary-btn inline-flex items-center px-3 py-1 text-xs bg-yellow-600 text-yellow-100 rounded hover:bg-yellow-700 transition-colors"
                        title="Hacer equipo principal">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.799-2.034c-.784-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                        </svg>
                        Principal
                      </button>
                    <% end %>
                    
                    <button 
                      onclick="removePlayerFromTeam(<%= player[:id] %>)" 
                      class="inline-flex items-center px-3 py-1 text-xs bg-red-600 text-red-100 rounded hover:bg-red-700 transition-colors"
                      title="Remover del equipo">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                      Remover
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
        
        <!-- Paginación para jugadores -->
        <% if @players.respond_to?(:current_page) %>
          <div class="px-6 py-4 border-t border-slate-600">
            <%= paginate @players, 
                  theme: 'custom_pagination',
                  param_name: :page %>
          </div>
        <% end %>
      <% else %>
        <div class="p-12 text-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-slate-500 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
          </svg>
          <h3 class="text-xl text-slate-300 font-medium mb-2">Sin jugadores</h3>
          <p class="text-slate-500 mb-4">Este equipo aún no tiene jugadores asignados</p>
          <% if user_signed_in? %>
            <button 
              onclick="openAddPlayerModal()" 
              class="inline-flex items-center px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
              </svg>
              Agregar Primer Jugador
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Modal para agregar jugador -->
<% if user_signed_in? %>
  <div id="addPlayerModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-[9999] flex items-center justify-center">
    <div class="bg-slate-800 rounded-lg shadow-xl border border-slate-600 p-6 w-full max-w-2xl mx-4 relative max-h-[90vh] overflow-y-auto">
      <div class="flex justify-between items-center mb-6">
        <h3 class="text-xl font-semibold text-slate-100">Agregar Jugador al Equipo</h3>
        <button onclick="closeAddPlayerModal()" class="text-slate-400 hover:text-slate-200 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <!-- Búsqueda de jugadores -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-slate-200 mb-2">
          Buscar Jugador
        </label>
        <div class="relative">
          <input type="text" 
                 id="playerSearchInput" 
                 placeholder="Escribe el nombre o tag del jugador..."
                 class="w-full bg-slate-700 border border-slate-600 text-slate-200 rounded-md px-4 py-3 text-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
                 autocomplete="off"
                 oninput="searchPlayers(this.value)">
          <div class="absolute inset-y-0 right-0 pr-3 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
            </svg>
          </div>
        </div>
      </div>

      <!-- Resultados de búsqueda -->
      <div id="searchResults" class="mb-6 hidden">
        <h4 class="text-sm font-medium text-slate-200 mb-3">Resultados de Búsqueda:</h4>
        <div id="playersSearchList" class="space-y-2 max-h-60 overflow-y-auto border border-slate-600 rounded-lg bg-slate-700">
          <!-- Los resultados se cargarán aquí dinámicamente -->
        </div>
      </div>

      <!-- Checkbox para equipo principal -->
      <div class="mb-6">
        <label class="flex items-center">
          <input type="checkbox" 
                 id="isPrimaryTeam" 
                 class="h-4 w-4 text-purple-600 focus:ring-purple-500 border-gray-300 rounded">
          <span class="ml-3 text-sm text-slate-300">
            Hacer este el equipo principal del jugador
            <span class="block text-xs text-slate-500 mt-1">
              Si está marcado, este equipo se convertirá en el equipo principal del jugador y aparecerá destacado en la vista de jugadores.
            </span>
          </span>
        </label>
      </div>

      <!-- Jugador seleccionado -->
      <div id="selectedPlayerInfo" class="mb-6 p-4 bg-slate-900 rounded-lg border border-slate-600 hidden">
        <h5 class="text-sm font-medium text-slate-200 mb-2">Jugador Seleccionado:</h5>
        <div id="selectedPlayerDetails" class="text-slate-300"></div>
      </div>

      <!-- Botones -->
      <div class="flex justify-end space-x-3">
        <button type="button" 
                onclick="closeAddPlayerModal()" 
                class="px-4 py-2 border border-slate-500 text-slate-300 bg-slate-700 rounded-md hover:bg-slate-600 transition-colors">
          Cancelar
        </button>
        <button type="button" 
                onclick="addSelectedPlayer()" 
                id="addPlayerBtn"
                class="px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed"
                disabled>
          Agregar Jugador
        </button>
      </div>
    </div>
  </div>
<% end %>

<!-- Modal para confirmar eliminación de equipo -->
<% if user_signed_in? %>
  <div id="deleteTeamModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-[9999] flex items-center justify-center">
    <div class="bg-slate-800 rounded-lg shadow-xl border border-red-600 p-6 w-full max-w-md mx-4 relative">
      <div class="flex justify-between items-center mb-6">
        <h3 class="text-xl font-semibold text-red-400">Eliminar Equipo</h3>
        <button onclick="closeDeleteTeamModal()" class="text-slate-400 hover:text-slate-200 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <div class="mb-6">
        <div class="flex items-center mb-4">
          <div class="flex-shrink-0 mr-4">
            <div class="w-12 h-12 bg-red-900 rounded-full flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
              </svg>
            </div>
          </div>
          <div>
            <h4 class="text-lg font-medium text-slate-100">¿Estás seguro?</h4>
            <p class="text-slate-400 text-sm">Esta acción no se puede deshacer.</p>
          </div>
        </div>

        <div class="bg-slate-900 rounded-lg p-4 border border-slate-600">
          <p class="text-slate-300 text-sm mb-2">
            <strong>Equipo a eliminar:</strong> <%= @team.name %> (<%= @team.acronym %>)
          </p>
          <% if @team.description.present? %>
            <p class="text-slate-400 text-xs mb-2">
              <strong>Descripción:</strong> <%= truncate(@team.description, length: 100) %>
            </p>
          <% end %>
          <p class="text-yellow-400 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline mr-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
            <strong>Se eliminarán <%= @team.players_count %> asociaciones de jugadores</strong>
          </p>
          <p class="text-slate-500 text-xs mt-1">
            Los jugadores no serán eliminados, solo se removerán del equipo.
          </p>
        </div>
      </div>

      <!-- Botones -->
      <div class="flex justify-end space-x-3">
        <button type="button" 
                onclick="closeDeleteTeamModal()" 
                class="px-4 py-2 border border-slate-500 text-slate-300 bg-slate-700 rounded-md hover:bg-slate-600 transition-colors">
          Cancelar
        </button>
        <button type="button" 
                onclick="confirmDeleteTeam()" 
                id="deleteTeamBtn"
                class="px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
          Eliminar Equipo
        </button>
      </div>
    </div>
  </div>
<% end %>

<!-- Modal para editar equipo -->
<div id="editTeamModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-[9999] flex items-center justify-center">
  <div class="bg-slate-800 rounded-lg shadow-xl border border-slate-600 p-6 w-full max-w-2xl mx-4 relative max-h-[90vh] overflow-y-auto">
    <div class="flex justify-between items-center mb-6">
      <h3 class="text-xl font-semibold text-slate-100">Editar Equipo</h3>
      <button onclick="closeEditTeamModal()" class="text-slate-400 hover:text-slate-200 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <form id="editTeamForm" action="<%= team_path(@team) %>" method="POST" enctype="multipart/form-data">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :_method, 'PATCH' %>
      
      <!-- Nombre del equipo -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-slate-200 mb-2">
          Nombre del Equipo *
        </label>
        <input type="text" 
               name="team[name]" 
               id="editTeamName"
               value="<%= @team.name %>"
               placeholder="Ej: Team Zero, Cloud9, etc."
               class="w-full bg-slate-700 border border-slate-600 text-slate-200 rounded-md px-4 py-3 text-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
               required>
        <div id="editNameError" class="text-red-400 text-xs mt-1 hidden"></div>
      </div>

      <!-- Sigla del equipo -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-slate-200 mb-2">
          Sigla del Equipo *
        </label>
        <input type="text" 
               name="team[acronym]" 
               id="editTeamAcronym"
               value="<%= @team.acronym %>"
               placeholder="Ej: TZ, C9, etc. (2-5 caracteres)"
               maxlength="5"
               class="w-full bg-slate-700 border border-slate-600 text-slate-200 rounded-md px-4 py-3 text-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"
               required>
        <div id="editAcronymError" class="text-red-400 text-xs mt-1 hidden"></div>
        <p class="text-slate-500 text-xs mt-1">Entre 2 y 5 caracteres. Se mostrará si no hay logo.</p>
      </div>

      <!-- Descripción -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-slate-200 mb-2">
          Descripción
        </label>
        <textarea name="team[description]" 
                  id="editTeamDescription"
                  rows="3"
                  placeholder="Descripción opcional del equipo..."
                  maxlength="500"
                  class="w-full bg-slate-700 border border-slate-600 text-slate-200 rounded-md px-4 py-3 text-sm focus:ring-2 focus:ring-purple-500 focus:border-purple-500"><%= @team.description %></textarea>
        <div id="editDescriptionError" class="text-red-400 text-xs mt-1 hidden"></div>
        <p class="text-slate-500 text-xs mt-1">Máximo 500 caracteres.</p>
      </div>

      <!-- Logo del equipo -->
      <div class="mb-6">
        <label class="block text-sm font-medium text-slate-200 mb-2">
          Logo del Equipo
        </label>
        <div class="flex items-center space-x-4">
          <!-- Preview del logo actual -->
          <div id="editLogoPreview" class="w-32 h-32 bg-slate-700 border-2 border-solid border-slate-500 rounded-lg flex items-center justify-center <%= @team.logo_image.attached? || @team.logo.present? ? '' : 'hidden' %>">
            <% if @team.logo_image.attached? %>
              <img id="editLogoImage" src="<%= url_for(@team.logo_image) %>" class="w-full h-full object-cover rounded-lg" alt="Logo actual">
            <% elsif @team.logo.present? %>
              <img id="editLogoImage" src="<%= @team.logo %>" class="w-full h-full object-contain rounded-lg" alt="Logo actual">
            <% else %>
              <img id="editLogoImage" class="w-full h-full object-cover rounded-lg hidden" alt="Preview del logo">
            <% end %>
          </div>
          
          <!-- Placeholder cuando no hay logo -->
          <div id="editLogoPlaceholder" class="w-32 h-32 bg-gradient-to-r from-purple-600 to-purple-800 rounded-lg flex items-center justify-center border-2 border-purple-500 <%= @team.logo_image.attached? || @team.logo.present? ? 'hidden' : '' %>">
            <span id="editAcronymPreview" class="text-white font-bold text-3xl"><%= @team.acronym %></span>
          </div>
          
          <!-- Input de archivo -->
          <div class="flex-1">
            <input type="file" 
                   name="team[logo_image]" 
                   id="editLogoInput"
                   accept="image/*"
                   class="hidden"
                   onchange="previewEditLogo(this)">
            <button type="button" 
                    onclick="document.getElementById('editLogoInput').click()"
                    class="inline-flex items-center px-4 py-2 border border-slate-500 text-slate-300 bg-slate-700 rounded-md hover:bg-slate-600 transition-colors text-sm">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd" />
              </svg>
              <%= @team.logo_image.attached? || @team.logo.present? ? 'Cambiar Logo' : 'Seleccionar Logo' %>
            </button>
            <% if @team.logo_image.attached? || @team.logo.present? %>
              <button type="button" 
                      onclick="removeEditLogo()"
                      id="editRemoveLogoBtn"
                      class="ml-2 inline-flex items-center px-3 py-2 border border-red-600 text-red-400 bg-slate-700 rounded-md hover:bg-slate-600 transition-colors text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                Quitar
              </button>
              <!-- Campo oculto para indicar que se debe eliminar el logo -->
              <input type="hidden" name="team[remove_logo]" id="editRemoveLogoFlag" value="false">
            <% else %>
              <button type="button" 
                      onclick="removeEditLogo()"
                      id="editRemoveLogoBtn"
                      class="ml-2 inline-flex items-center px-3 py-2 border border-red-600 text-red-400 bg-slate-700 rounded-md hover:bg-slate-600 transition-colors text-sm hidden">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
                Quitar
              </button>
              <!-- Campo oculto para indicar que se debe eliminar el logo -->
              <input type="hidden" name="team[remove_logo]" id="editRemoveLogoFlag" value="false">
            <% end %>
          </div>
        </div>
        <div id="editLogoError" class="text-red-400 text-xs mt-1 hidden"></div>
        <p class="text-slate-500 text-xs mt-1">
          Imagen cuadrada recomendada. Formatos: JPEG, PNG, GIF, WebP. Máximo 5MB.
        </p>
      </div>

      <!-- Botones -->
      <div class="flex justify-end space-x-3">
        <button type="button" 
                onclick="closeEditTeamModal()" 
                class="px-4 py-2 border border-slate-500 text-slate-300 bg-slate-700 rounded-md hover:bg-slate-600 transition-colors">
          Cancelar
        </button>
        <button type="submit" 
                id="editTeamBtn"
                class="px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors disabled:opacity-50 disabled:cursor-not-allowed">
          Guardar Cambios
        </button>
      </div>
    </form>
  </div>
</div>

<script>
// Configuración específica para esta vista
window.TEAM_CONFIG = {
  teamId: <%= @team.id %>,
  searchUrl: '<%= search_players_team_path(@team) %>',
  addPlayerUrl: '<%= add_player_team_path(@team) %>',
  removePlayerUrl: '<%= remove_player_team_path(@team) %>',
  deleteTeamUrl: '<%= team_path(@team) %>'
};

// Funciones que necesitan acceso a variables ERB
function searchPlayers(query) {
  if (window.TeamsModule && window.TeamsModule.searchPlayers) {
    window.TeamsModule.searchPlayers(query);
  }
}

function selectPlayer(playerId, entrantName, name) {
  if (window.TeamsModule && window.TeamsModule.selectPlayer) {
    window.TeamsModule.selectPlayer(playerId, entrantName, name);
  }
}

function addSelectedPlayer() {
  if (window.TeamsModule && window.TeamsModule.addSelectedPlayer) {
    window.TeamsModule.addSelectedPlayer();
  }
}

function removePlayerFromTeam(playerId) {
  if (window.TeamsModule && window.TeamsModule.removePlayerFromTeam) {
    window.TeamsModule.removePlayerFromTeam(playerId);
  }
}

function openDeleteTeamModal() {
  if (window.TeamsModule && window.TeamsModule.openDeleteTeamModal) {
    window.TeamsModule.openDeleteTeamModal();
  }
}

function closeDeleteTeamModal() {
  if (window.TeamsModule && window.TeamsModule.closeDeleteTeamModal) {
    window.TeamsModule.closeDeleteTeamModal();
  }
}

function confirmDeleteTeam() {
  if (window.TeamsModule && window.TeamsModule.confirmDeleteTeam) {
    window.TeamsModule.confirmDeleteTeam();
  }
}

// Funciones para el modal de edición
function openEditTeamModal() {
  // Verificar si el usuario está autenticado
  <% unless user_signed_in? %>
    alert('Debes iniciar sesión para editar equipos.');
    window.location.href = '/users/sign_in';
    return;
  <% end %>
  
  const modal = document.getElementById('editTeamModal');
  if (modal) {
    modal.classList.remove('hidden');
    
    // Enfocar en el input de nombre
    setTimeout(() => {
      const nameInput = document.getElementById('editTeamName');
      if (nameInput) {
        nameInput.focus();
      }
    }, 100);
  }
}

function closeEditTeamModal() {
  const modal = document.getElementById('editTeamModal');
  if (modal) {
    modal.classList.add('hidden');
    
    // Limpiar errores
    const errorElements = document.querySelectorAll('[id^="edit"][id$="Error"]');
    errorElements.forEach(el => {
      el.classList.add('hidden');
      el.textContent = '';
    });
  }
}

function previewEditLogo(input) {
  const file = input.files[0];
  if (file) {
    // Validar tipo de archivo
    const validTypes = ['image/jpeg', 'image/png', 'image/gif', 'image/webp'];
    if (!validTypes.includes(file.type)) {
      showEditError('editLogoError', 'Tipo de archivo no válido. Use JPEG, PNG, GIF o WebP.');
      input.value = '';
      return;
    }
    
    // Validar tamaño
    if (file.size > 5 * 1024 * 1024) { // 5MB
      showEditError('editLogoError', 'El archivo es muy grande. Máximo 5MB.');
      input.value = '';
      return;
    }
    
    const reader = new FileReader();
    reader.onload = function(e) {
      const logoImage = document.getElementById('editLogoImage');
      const logoPreview = document.getElementById('editLogoPreview');
      const logoPlaceholder = document.getElementById('editLogoPlaceholder');
      const removeBtn = document.getElementById('editRemoveLogoBtn');
      const removeFlag = document.getElementById('editRemoveLogoFlag');
      
      logoImage.src = e.target.result;
      logoImage.classList.remove('hidden');
      logoPreview.classList.remove('hidden');
      logoPlaceholder.classList.add('hidden');
      removeBtn.classList.remove('hidden');
      
      if (removeFlag) {
        removeFlag.value = 'false';
      }
      
      hideEditError('editLogoError');
    };
    reader.readAsDataURL(file);
  }
}

function removeEditLogo() {
  const logoInput = document.getElementById('editLogoInput');
  const logoPreview = document.getElementById('editLogoPreview');
  const logoPlaceholder = document.getElementById('editLogoPlaceholder');
  const removeBtn = document.getElementById('editRemoveLogoBtn');
  const removeFlag = document.getElementById('editRemoveLogoFlag');
  
  logoInput.value = '';
  logoPreview.classList.add('hidden');
  logoPlaceholder.classList.remove('hidden');
  removeBtn.classList.add('hidden');
  
  if (removeFlag) {
    removeFlag.value = 'true';
  }
  
  hideEditError('editLogoError');
}

function updateEditAcronymPreview(acronym) {
  const acronymPreview = document.getElementById('editAcronymPreview');
  if (acronymPreview) {
    acronymPreview.textContent = acronym || '?';
  }
}

function showEditError(elementId, message) {
  const errorElement = document.getElementById(elementId);
  if (errorElement) {
    errorElement.textContent = message;
    errorElement.classList.remove('hidden');
  }
}

function hideEditError(elementId) {
  const errorElement = document.getElementById(elementId);
  if (errorElement) {
    errorElement.classList.add('hidden');
    errorElement.textContent = '';
  }
}

// Actualizar preview de sigla mientras se escribe en edición
document.addEventListener('DOMContentLoaded', function() {
  const editAcronymInput = document.getElementById('editTeamAcronym');
  if (editAcronymInput) {
    editAcronymInput.addEventListener('input', function() {
      updateEditAcronymPreview(this.value.toUpperCase());
    });
  }
  
  // Manejar envío del formulario de edición
  const editForm = document.getElementById('editTeamForm');
  if (editForm) {
    editForm.addEventListener('submit', function(e) {
      e.preventDefault();
      
      const submitBtn = document.getElementById('editTeamBtn');
      if (submitBtn) {
        submitBtn.disabled = true;
        submitBtn.textContent = 'Guardando...';
      }
      
      // Enviar el formulario
      const formData = new FormData(this);
      
      fetch(this.action, {
        method: 'POST',
        body: formData,
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content')
        }
      })
      .then(response => {
        if (response.ok) {
          // Recargar la página para mostrar los cambios
          window.location.reload();
        } else {
          return response.json().then(data => {
            throw new Error(data.error || 'Error al actualizar el equipo');
          });
        }
      })
      .catch(error => {
        console.error('Error:', error);
        alert('Error al actualizar el equipo: ' + error.message);
      })
      .finally(() => {
        if (submitBtn) {
          submitBtn.disabled = false;
          submitBtn.textContent = 'Guardar Cambios';
        }
      });
    });
  }
});
</script>
