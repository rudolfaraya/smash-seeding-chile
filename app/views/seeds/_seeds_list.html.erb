<% if seeds.any? %>
  <div class="bg-slate-800 rounded-xl shadow-md overflow-hidden border border-slate-600" id="seed-content-<%= event.id %>">
    <div class="px-6 py-1.5 bg-gradient-to-r from-slate-900 to-blue-900 border-b border-red-500">
      <div class="flex justify-between items-center">
        <div>
          <h3 class="text-xs font-semibold text-slate-50 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1.5 text-red-400 star-icon" viewBox="0 0 20 20" fill="currentColor" style="filter: drop-shadow(0 0 3px #f87171);">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.799-2.034c-.784-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Seeding para <%= event.name %>
          </h3>
          <% if event.respond_to?(:seeds_last_synced_at) && event.seeds_last_synced_at.present? %>
            <p class="text-[10px] text-blue-300 mt-0.5 ml-5 tracking-wide">
              <span class="flex items-center text-[9px]">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-2 w-2 mr-1 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                </svg>
                Actualizado: <%= format_datetime_cl(event.seeds_last_synced_at) %>
              </span>
            </p>
          <% end %>
        </div>
        
        <%= link_to sync_seeds_tournament_event_path(tournament, event, force: true), 
                  class: "inline-flex items-center px-1.5 py-0.5 bg-red-500 text-slate-50 text-[10px] font-medium rounded-md hover:bg-red-600 transition-colors duration-200 cursor-pointer whitespace-nowrap", 
                  data: { 
                    turbo_method: :post,
                    confirm: "¿Estás seguro? Esto eliminará todos los seeds actuales y los volverá a sincronizar desde start.gg"
                  } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-2 w-2 mr-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
          </svg>
          Forzar sincronización
        <% end %>
      </div>
    </div>
    
    <table class="min-w-full divide-y divide-slate-600">
      <thead>
        <tr class="bg-slate-900">
          <th scope="col" class="px-1 py-1 text-left text-[8px] font-medium text-blue-300 uppercase tracking-wider w-8">Seed</th>
          <th scope="col" class="px-1 py-1 text-center text-[8px] font-medium text-blue-300 uppercase tracking-wider w-16">Equipo</th>
          <th scope="col" class="px-1 py-1 text-left text-[8px] font-medium text-blue-300 uppercase tracking-wider w-20">Nombre</th>
          <th scope="col" class="px-1 py-1 text-center text-[8px] font-medium text-blue-300 uppercase tracking-wider">Personajes</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-700">
        <% event_seeds.each do |event_seed| %>
          <tr class="bg-slate-800 hover:bg-slate-700">
            <td class="px-1 py-1.5 whitespace-nowrap text-[10px] font-medium text-white text-center">
              <%= event_seed.seed_num %>
            </td>
            
            <!-- Columna de Equipos -->
            <td class="px-1 py-1.5 whitespace-nowrap text-center">
              <% if event_seed.player.present? && event_seed.player.has_team? %>
                <div class="flex flex-wrap items-center justify-center gap-0.5">
                  <% event_seed.player.teams.each do |team| %>
                    <% if team.logo_image&.attached? %>
                      <%= image_tag team.logo_image, 
                          class: "w-4 h-4 object-contain rounded", 
                          alt: team.tag || team.name %>
                    <% elsif team.logo.present? %>
                      <%= image_tag team.logo, 
                          class: "w-4 h-4 object-contain rounded", 
                          alt: team.tag || team.name %>
                    <% else %>
                      <div class="w-4 h-4 bg-gradient-to-br from-purple-600 to-purple-800 rounded flex items-center justify-center">
                        <span class="text-[6px] font-bold text-white leading-none">
                          <%= team.tag.present? ? team.tag[0..1].upcase : team.name[0..1].upcase %>
                        </span>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% else %>
                <div class="flex justify-center">
                  <div class="w-4 h-4 bg-slate-700 rounded flex items-center justify-center border border-slate-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-2 w-2 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                </div>
              <% end %>
            </td>
            
            <td class="px-1 py-1.5 whitespace-nowrap">
              <div class="text-[9px] font-medium text-white truncate max-w-[80px]">
                <%= event_seed.player&.entrant_name || event_seed.player&.tag || "TBD" %>
              </div>
            </td>
            
            <td class="px-1 py-1.5">
              <div class="flex flex-wrap items-center gap-0.5 justify-center">
                <% if event_seed.player.present? %>
                  <% player_characters = event_seed.player.smash_characters %>
                  <% if player_characters.any? %>
                    <% player_characters.each_with_index do |char_data, char_index| %>
                      <%= smash_character_icon(char_data[:character], char_data[:skin], 
                            class: 'smash-character-icon', 
                            width: 16, 
                            height: 16,
                            title: event_seed.player.character_display_name(char_data[:character])) %>
                    <% end %>
                  <% else %>
                    <div class="flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                  <% end %>
                <% else %>
                  <span class="text-slate-400 tracking-wide text-[8px]">N/A</span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="p-3 text-center bg-slate-800 rounded-xl shadow-md border border-slate-600" id="seed-content-<%= event.id %>">
    <div class="flex flex-col items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-400 mb-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <p class="text-slate-300 mb-2 tracking-wide text-[10px]">No hay información de seeds disponible para este evento.</p>
      <%= link_to sync_seeds_tournament_event_path(tournament, event), 
                class: "inline-flex items-center px-2 py-1 bg-red-600 text-slate-50 rounded-md shadow-sm hover:bg-red-700 focus:outline-none focus:ring-1 focus:ring-offset-1 focus:ring-red-500 transition-colors duration-200 cursor-pointer text-[10px] whitespace-nowrap",
                data: { turbo_method: :post } do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-2 w-2 mr-1" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
        </svg>
        Sincronizar Seeds
      <% end %>
    </div>
  </div>
<% end %> 