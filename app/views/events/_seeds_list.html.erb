<% if seeds.any? %>
  <div class="bg-slate-800 rounded-xl shadow-md overflow-hidden border border-slate-600" id="seed-content-<%= event.id %>">
    <div class="px-6 py-2 bg-gradient-to-r from-slate-900 to-blue-900 border-b border-red-500">
      <div class="flex justify-between items-center">
        <div>
          <h3 class="text-sm sm:text-base font-semibold text-slate-50 flex items-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 text-red-400 star-icon" viewBox="0 0 20 20" fill="currentColor" style="filter: drop-shadow(0 0 3px #f87171);">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.799-2.034c-.784-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            Seeding para <%= event.name %>
          </h3>
          <% if event.respond_to?(:seeds_last_synced_at) && event.seeds_last_synced_at.present? %>
            <p class="text-xs text-blue-300 mt-0.5 ml-6 tracking-wide">
              <span class="flex items-center text-[10px]">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 mr-1.5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                </svg>
                Actualizado: <%= format_datetime_cl(event.seeds_last_synced_at) %>
              </span>
            </p>
          <% end %>
        </div>
        
        <% if user_signed_in? %>
          <div class="flex space-x-2">
            <%= link_to sync_seeds_tournament_event_path(tournament, event, force: true), 
                      class: "inline-flex items-center px-2 py-1 bg-red-500 text-slate-50 text-xs font-medium rounded-md hover:bg-red-600 transition-colors duration-200 cursor-pointer", 
                      data: { 
                        turbo_method: :post,
                        confirm: "¿Estás seguro? Esto eliminará todos los seeds actuales y los volverá a sincronizar desde start.gg"
                      } do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
              </svg>
              Forzar sincronización
            <% end %>
            
            <% if seeds.any? %>
              <%= link_to export_seeds_tournament_event_path(tournament, event), 
                          target: "_blank",
                          class: "inline-flex items-center px-2 py-1 bg-green-500 text-slate-50 text-xs font-medium rounded-md hover:bg-green-600 transition-colors duration-200 cursor-pointer",
                          title: "Exportar seeds como imagen o HTML" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd" />
                </svg>
                Exportar
              <% end %>
            <% end %>
          </div>
        <% else %>
          <div class="flex space-x-2">
            <span class="inline-flex items-center px-2 py-1 bg-slate-600 text-slate-400 text-xs font-medium rounded-md cursor-not-allowed">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
              </svg>
              Requiere Login
            </span>
            
            <% if seeds.any? %>
              <%= link_to export_seeds_tournament_event_path(tournament, event), 
                          target: "_blank",
                          class: "inline-flex items-center px-2 py-1 bg-green-500 text-slate-50 text-xs font-medium rounded-md hover:bg-green-600 transition-colors duration-200 cursor-pointer",
                          title: "Exportar seeds como imagen o HTML" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M6 2a2 2 0 00-2 2v12a2 2 0 002 2h8a2 2 0 002-2V7.414A2 2 0 0015.414 6L12 2.586A2 2 0 0010.586 2H6zm5 6a1 1 0 10-2 0v3.586l-1.293-1.293a1 1 0 10-1.414 1.414l3 3a1 1 0 001.414 0l3-3a1 1 0 00-1.414-1.414L11 11.586V8z" clip-rule="evenodd" />
                </svg>
                Exportar
              <% end %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    
    <table class="min-w-full divide-y divide-slate-600">
      <thead>
        <tr class="bg-slate-900">
          <th scope="col" class="px-3 py-1.5 text-left text-[10px] font-medium text-blue-300 uppercase tracking-wider w-16">Seed</th>
          <th scope="col" class="px-3 py-1.5 text-center text-[10px] font-medium text-blue-300 uppercase tracking-wider w-20">Equipo</th>
          <th scope="col" class="px-3 py-1.5 text-left text-[10px] font-medium text-blue-300 uppercase tracking-wider">Nombre en Torneo</th>
          <th scope="col" class="px-3 py-1.5 text-left text-[10px] font-medium text-blue-300 uppercase tracking-wider">Personajes</th>
          <th scope="col" class="px-3 py-1.5 text-left text-[10px] font-medium text-blue-300 uppercase tracking-wider">Jugador</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-600">
        <% seeds.each_with_index do |event_seed, index| %>
          <tr class="<%= index % 2 == 0 ? 'bg-slate-800' : 'bg-slate-700' %> hover:bg-slate-600 transition-colors duration-150 ease-in-out">
            <td class="px-3 py-2 whitespace-nowrap text-[10px] font-medium">
              <span class="inline-flex items-center justify-center h-4 w-4 rounded-full bg-red-900 text-red-200 text-[9px] border border-red-500" style="text-shadow: 0 0 3px #f87171;">
                <%= event_seed.seed_num %>
              </span>
            </td>
            
            <td class="px-3 py-2">
              <% if event_seed.player.present? && event_seed.player.has_team? %>
                <div class="flex flex-wrap justify-center gap-1">
                  <% event_seed.player.teams.each do |team| %>
                    <% if team.logo_image&.attached? %>
                      <%= image_tag team.logo_image, 
                            alt: team.name,
                            class: "w-6 h-6 object-contain rounded",
                            title: team.name %>
                    <% elsif team.logo.present? %>
                      <%= image_tag team.logo, 
                            alt: team.name,
                            class: "w-6 h-6 object-contain rounded",
                            title: team.name %>
                    <% else %>
                      <div class="w-6 h-6 bg-gradient-to-r from-purple-600 to-purple-800 rounded flex items-center justify-center border border-purple-500">
                        <span class="text-white font-bold text-[8px]"><%= team.acronym %></span>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% else %>
                <div class="flex justify-center">
                  <div class="w-6 h-6 bg-slate-700 rounded flex items-center justify-center border border-slate-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                </div>
              <% end %>
            </td>
            
            <td class="px-3 py-2 text-[10px]">
              <% if event_seed.player.present? %>
                <div class="text-slate-200 font-medium tracking-wide">
                  <%= event_seed.player.entrant_name.present? ? event_seed.player.entrant_name : 'Sin tag' %>
                </div>
              <% else %>
                <span class="text-slate-400 tracking-wide">N/A</span>
              <% end %>
            </td>
            
            <td class="px-3 py-2 text-xs">
              <% if event_seed.player.present? %>
                <% player_characters = event_seed.player.smash_characters %>
                <% if player_characters.any? %>
                  <div class="flex flex-wrap gap-2">
                    <% player_characters.each_with_index do |char_data, char_index| %>
                      <div class="inline-flex items-center space-x-1.5">
                        <%= smash_character_icon(char_data[:character], char_data[:skin], 
                              class: 'smash-character-icon', 
                              width: 28, 
                              height: 28) %>
                        <span class="text-[10px] font-medium text-slate-200 leading-tight">
                          <%= event_seed.player.character_display_name(char_data[:character]) %>
                        </span>
                      </div>
                    <% end %>
                  </div>
                <% else %>
                  <div class="flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 mr-1 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-slate-500 tracking-wide text-[10px]">Sin registrar</span>
                  </div>
                <% end %>
              <% else %>
                <span class="text-slate-400 tracking-wide text-[10px]">N/A</span>
              <% end %>
            </td>
            
            <td class="px-3 py-2 text-[10px]">
              <% if event_seed.player.present? %>
                <div class="text-slate-300 tracking-wide">
                  <%= event_seed.player.name.present? ? event_seed.player.name : 'Sin nombre' %>
                </div>
              <% else %>
                <span class="text-slate-400 tracking-wide">N/A</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="p-4 text-center bg-slate-800 rounded-xl shadow-md border border-slate-600" id="seed-content-<%= event.id %>">
    <div class="flex flex-col items-center justify-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-400 mb-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <p class="text-slate-300 mb-3 tracking-wide text-xs">No hay información de seeds disponible para este evento.</p>
      <% if user_signed_in? %>
        <%= link_to sync_seeds_tournament_event_path(tournament, event), 
                  class: "inline-flex items-center px-3 py-1.5 bg-red-600 text-slate-50 rounded-md shadow-sm hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200 cursor-pointer text-xs",
                  data: { turbo_method: :post } do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
          </svg>
          Sincronizar Seeds
        <% end %>
      <% else %>
        <span class="inline-flex items-center px-3 py-1.5 bg-slate-600 text-slate-400 rounded-md text-xs cursor-not-allowed">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-2.5 w-2.5 mr-1.5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
          </svg>
          Requiere Login
        </span>
      <% end %>
    </div>
  </div>
<% end %> 