<%= turbo_frame_tag "players_results" do %>
<% if players.any? %>
<!-- Vista Desktop: Tabla tradicional -->
<div class="hidden md:block overflow-hidden shadow-lg rounded-lg border border-slate-600 bg-slate-800">
  <table class="min-w-full bg-slate-800 divide-y divide-slate-600 players-table">
    <thead>
      <tr class="bg-gradient-to-r from-slate-900 to-blue-900 border-b-2 border-red-500">
        <th class="py-3 px-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider" style="width: 20%;">Jugador</th>
        <th class="py-3 px-2 text-center text-xs font-semibold text-blue-300 uppercase tracking-wider player-character-column" style="width: 22%;">Personaje</th>
        <th class="py-3 px-2 text-center text-xs font-semibold text-blue-300 uppercase tracking-wider" style="width: 12%;">Equipo</th>
        <th class="py-3 px-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider" style="width: 16%;">Informaci√≥n</th>
        <th class="py-3 px-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider" style="width: 15%;">Eventos</th>
        <th class="py-3 px-4 text-left text-xs font-semibold text-blue-300 uppercase tracking-wider" style="width: 15%;">Acciones</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-slate-600">
      <% players.each_with_index do |player, index| %>
          <% 
            # Calcular estad√≠sticas de participaci√≥n de forma m√°s simple
            event_seeds = player.event_seeds.to_a # Convertir a array para evitar m√∫ltiples consultas
            total_events = event_seeds.size
            
            # Obtener torneos √∫nicos de forma simple
            unique_tournaments = event_seeds.map { |es| es.event.tournament.id }.uniq
            tournaments_participated = unique_tournaments.size
            
            # Calcular promedio y mejor seed
            if total_events > 0
              seed_numbers = event_seeds.map(&:seed_num).compact
              avg_seed = seed_numbers.any? ? (seed_numbers.sum.to_f / seed_numbers.size).round(1) : 0
              best_seed = seed_numbers.min || 0
            else
              avg_seed = 0
              best_seed = 0
            end
            
            # Verificar si es el jugador vinculado del usuario actual
            is_linked_player = user_signed_in? && current_user.player == player
            can_edit_player = user_signed_in? && (current_user.admin? || is_linked_player)
            
            # Color de fondo especial para el jugador vinculado
            if is_linked_player
              player_bg_color = 'bg-gradient-to-r from-green-900/50 to-emerald-800/50 border-2 border-green-500/50'
              player_hover_color = 'hover:from-green-800/60 hover:to-emerald-700/60'
            else
              player_bg_color = index % 2 == 0 ? 'bg-slate-800' : 'bg-slate-900'
              player_hover_color = index % 2 == 0 ? 'hover:bg-slate-700' : 'hover:bg-slate-800'
            end
          %>
        <tr class="<%= player_bg_color %> <%= player_hover_color %> transition-colors duration-150 ease-in-out player-row border-b border-slate-700" data-player-id="<%= player.id %>" style="height: 100px;" <%= 'title="‚úÖ Este es tu jugador vinculado"'.html_safe if is_linked_player %>>
          <td class="py-4 px-4">
            <div class="flex items-center">
              <div class="flex-shrink-0 h-10 w-10">
                <div class="h-10 w-10 rounded-full <%= is_linked_player ? 'bg-gradient-to-r from-green-600 to-emerald-800 border-2 border-green-400' : 'bg-gradient-to-r from-red-600 to-red-800 border-2 border-red-500' %> flex items-center justify-center">
                  <% if is_linked_player %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-100" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                    </svg>
                  <% else %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-100" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-slate-100 flex items-center">
                  <%= player.entrant_name.present? ? player.entrant_name : 'Sin tag' %>
                  <% if is_linked_player %>
                    <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <svg class="w-2 h-2 mr-1" fill="currentColor" viewBox="0 0 8 8">
                        <circle cx="4" cy="4" r="3"/>
                      </svg>
                      Tu jugador
                    </span>
                  <% end %>
                </div>
                <div class="text-sm text-slate-400">
                  <%= player.name.present? ? player.name : 'Sin nombre' %>
                </div>
                
                <!-- Personajes de Smash -->
                <% if player.smash_characters.any? %>
                  <div class="flex items-center mt-2 space-x-1">
                    <% player.smash_characters.each do |char_data| %>
                      <%= smash_character_icon(char_data[:character], char_data[:skin], 
                            class: 'smash-character-icon', 
                            width: 32, 
                            height: 32) %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          </td>
          
          <!-- Nueva columna para personaje principal -->
          <td class="py-0 px-0 text-center player-character-column relative overflow-hidden" style="height: 100px;">
            <% if player.character_1.present? %>
              <div class="w-full h-full relative overflow-hidden">
                <%= player_main_character_avatar(player, 
                      class: "large-character-avatar",
                      style: "width: 100% !important; height: 100% !important; object-fit: cover !important; max-width: none !important; max-height: none !important;") %>
              </div>
            <% else %>
              <div class="w-full h-full flex items-center justify-center bg-slate-700">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
            <% end %>
          </td>
          
          <!-- Nueva columna para equipo -->
          <td class="text-center" style="height: 100px; padding: 0;">
            <div class="w-full h-full flex items-center justify-center">
              <% if player.has_team? %>
                <% primary_team = player.primary_team_optimized || player.teams.first %>
                <% if primary_team&.logo_image&.attached? %>
                  <%= image_tag primary_team.logo_image, 
                        alt: primary_team.name,
                        class: "team-logo-large",
                        style: "width: 100px !important; height: 100px !important; object-fit: contain !important; max-width: none !important; max-height: none !important;",
                        title: primary_team.name %>
                <% elsif primary_team&.logo.present? %>
                  <%= image_tag primary_team.logo, 
                        alt: primary_team.name,
                        class: "team-logo-large",
                        style: "width: 100px !important; height: 100px !important; object-fit: contain !important; max-width: none !important; max-height: none !important;",
                        title: primary_team.name %>
                <% else %>
                  <div class="flex flex-col items-center">
                    <div class="w-12 h-12 mb-1 bg-gradient-to-r from-purple-600 to-purple-800 rounded-lg flex items-center justify-center border-2 border-purple-500">
                      <span class="text-white font-bold text-xs"><%= primary_team&.acronym %></span>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <div class="flex flex-col items-center">
                  <div class="w-12 h-12 mb-1 bg-slate-700 rounded-lg flex items-center justify-center border border-slate-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-slate-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div class="text-xs text-slate-500">
                    Sin equipo
                  </div>
                </div>
              <% end %>
            </div>
          </td>
          <td class="py-4 px-4">
            <div class="text-sm text-slate-300">
              <% if player.country.present? %>
                <div class="flex items-center mb-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-2 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-xs"><%= player.country %></span>
                </div>
              <% end %>
              <% if player.twitter_handle.present? %>
                <div class="flex items-center mb-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-2 text-sky-400" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                  </svg>
                  <a href="<%= player.twitter_url %>" target="_blank" rel="noopener noreferrer" class="text-sky-400 hover:text-sky-300 transition-colors duration-200">
                    @<%= player.twitter_handle %>
                  </a>
                </div>
              <% end %>
              <% if player.discriminator.present? %>
                <div class="flex items-center mb-1">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-2 text-green-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.586 4.586a2 2 0 112.828 2.828l-3 3a2 2 0 01-2.828 0 1 1 0 00-1.414 1.414 4 4 0 005.656 0l3-3a4 4 0 00-5.656-5.656l-1.5 1.5a1 1 0 101.414 1.414l1.5-1.5zm-5 5a2 2 0 012.828 0 1 1 0 101.414-1.414 4 4 0 00-5.656 0l-3 3a4 4 0 105.656 5.656l1.5-1.5a1 1 0 10-1.414-1.414l-1.5 1.5a2 2 0 11-2.828-2.828l3-3z" clip-rule="evenodd" />
                  </svg>
                  <a href="<%= player.start_gg_url %>" target="_blank" rel="noopener noreferrer" class="text-green-400 hover:text-green-300 transition-colors duration-200">
                    start.gg
                  </a>
                </div>
              <% end %>
              <% if player.gender_pronoun.present? %>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-2 text-purple-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-xs"><%= player.gender_pronoun %></span>
                </div>
              <% end %>
            </div>
          </td>
          <td class="py-4 px-4">
            <div class="flex items-center">
              <div class="flex flex-col">
                <div class="flex items-center mb-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-2 text-red-400" viewBox="0 0 20 20" fill="currentColor" style="filter: drop-shadow(0 0 2px #f87171);">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118l-2.799-2.034c-.784-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <span class="text-xs text-slate-300"><%= total_events %> eventos</span>
                </div>
                
                <% if total_events > 0 %>
                  <div class="text-xs text-slate-400 space-y-1">
                    <div>üèÜ Mejor seed: <%= best_seed %></div>
                    <div>üìä Promedio: <%= avg_seed %></div>
                    <div>üéØ Torneos: <%= tournaments_participated %></div>
                  </div>
                <% else %>
                  <span class="text-xs text-slate-500">Sin eventos</span>
                <% end %>
              </div>
            </div>
          </td>
          <td class="py-4 px-6">
            <div class="flex space-x-3">
              <% if can_edit_player %>
                <!-- Bot√≥n para editar informaci√≥n del jugador -->
                <button 
                  onclick="openEditInfoModal(<%= player.id %>)" 
                  class="inline-flex items-center px-2 py-1 border border-purple-500 text-purple-400 bg-slate-800 rounded-md shadow-sm hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-colors duration-200 cursor-pointer text-xs" 
                  title="Editar informaci√≥n del jugador">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-6-3a2 2 0 11-4 0 2 2 0 014 0zm-2 4a5 5 0 00-4.546 2.916A5.986 5.986 0 0010 16a5.986 5.986 0 004.546-2.084A5 5 0 0010 11z" clip-rule="evenodd" />
                  </svg>
                  <span>Editar Jugador</span>
                </button>
                
                <!-- Bot√≥n para editar personajes de Smash -->
                <button 
                  onclick="openSmashCharacterModal(<%= player.id %>)" 
                  class="inline-flex items-center px-2 py-1 border border-green-500 text-green-400 bg-slate-800 rounded-md shadow-sm hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors duration-200 cursor-pointer text-xs" 
                  title="Editar personajes de Smash">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                  </svg>
                  <span>Personajes</span>
                </button>
                
                <!-- Bot√≥n para editar equipos -->
                <button 
                  onclick="openEditTeamsModal(<%= player.id %>)" 
                  class="inline-flex items-center px-2 py-1 border border-amber-500 text-amber-400 bg-slate-800 rounded-md shadow-sm hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500 transition-colors duration-200 cursor-pointer text-xs" 
                  title="Editar equipos del jugador">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M17 20a2 2 0 002-2V6a2 2 0 00-2-2h-3a2 2 0 00-2-2H8a2 2 0 00-2 2H3a2 2 0 00-2 2v12a2 2 0 002 2h14zM3 6h2V4h2v2h6V4h2v2h2v12H3V6z" />
                  </svg>
                  <span>Equipos</span>
                </button>
              <% elsif user_signed_in? %>
                <span class="inline-flex items-center px-2 py-1 border border-slate-600 text-slate-500 bg-slate-800 rounded-md cursor-not-allowed text-xs" title="Solo puedes editar tu propio jugador">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                  </svg>
                  <span>Solo lectura</span>
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 border border-slate-600 text-slate-500 bg-slate-800 rounded-md cursor-not-allowed text-xs">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                  </svg>
                  <span>Requiere Login</span>
                </span>
              <% end %>
              
              <!-- Bot√≥n para ver eventos (dropdown) -->
              <% if total_events > 0 %>
                <button 
                  id="toggle-events-<%= player.id %>" 
                  onclick="togglePlayerEvents(<%= player.id %>)" 
                  class="toggle-button inline-flex items-center px-2 py-1 border border-blue-500 text-blue-400 bg-slate-800 rounded-md shadow-sm hover:bg-slate-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200 cursor-pointer text-xs" 
                  data-state="closed">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                  </svg>
                  <span>Ver Eventos</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1 toggle-icon" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </button>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 text-slate-500 bg-slate-900 rounded-md cursor-not-allowed text-xs">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                    <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                  </svg>
                  Sin eventos
                </span>
              <% end %>
            </div>
          </td>
        </tr>
        
        <!-- Filas ocultas para los eventos del jugador -->
        <% if total_events > 0 %>
          <% event_seeds.sort_by { |es| es.event.tournament.start_at }.reverse.each_with_index do |event_seed, event_index| %>
            <% 
              event = event_seed.event
              tournament = event.tournament
              is_future = tournament.start_at > Time.current
              event_emoji = is_future ? "üìÖ" : "‚úÖ"
              event_bg_color = 'bg-slate-700'
              event_hover_color = 'hover:bg-slate-600'
            %>
            <tr id="eventRow-<%= player.id %>-<%= event_seed.id %>" class="event-row hidden <%= event_bg_color %> <%= event_hover_color %> transition-colors duration-150 border-b border-slate-600" data-player-id="<%= player.id %>" style="display: none;">
              <td class="py-3 px-8">
                <div class="flex items-center">
                  <span class="mr-3" style="filter: drop-shadow(0 0 2px #f87171);"><%= event_emoji %></span>
                  <div class="ml-4">
                    <span class="text-slate-200 font-medium text-sm tracking-wide"><%= event.name %></span>
                    <div class="text-xs text-slate-400"><%= tournament.name %></div>
                  </div>
                </div>
              </td>
              <!-- Celda vac√≠a para mantener alineaci√≥n con columna de personaje -->
              <td class="py-3 px-4 player-character-column"></td>
              <!-- Celda vac√≠a para mantener alineaci√≥n con columna de equipo -->
              <td class="py-3 px-4"></td>
              <td class="py-3 px-6">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 mr-2 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                  </svg>
                  <span class="text-xs text-slate-400"><%= format_datetime_cl(tournament.start_at) %></span>
                </div>
              </td>
              <td class="py-3 px-6">
                <div class="flex items-center">
                  <div class="flex items-center justify-center h-6 w-6 rounded-full bg-red-900 text-red-200 text-xs border border-red-500 mr-3" style="text-shadow: 0 0 3px #f87171;">
                    #<%= event_seed.seed_num %>
                  </div>
                  <span class="text-xs text-slate-300">Seed en el evento</span>
                </div>
              </td>
              <td class="py-3 px-6">
                <span class="text-xs text-slate-400">
                  <%= is_future ? "Por participar" : "Particip√≥" %>
                </span>
              </td>
            </tr>
          <% end %>
        <% end %>
        
        <% if total_events == 0 %>
          <tr id="eventRow-<%= player.id %>-empty" class="event-row hidden bg-slate-800 border-b border-slate-600" data-player-id="<%= player.id %>" style="display: none;">
            <td class="py-6 px-6 text-center text-slate-400" colspan="6">
