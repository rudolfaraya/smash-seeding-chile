<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow-md mb-8">
      <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-6 rounded-t-lg">
        <h1 class="text-3xl font-bold flex items-center">
          üéÆ Panel de Administraci√≥n
          <span class="ml-3 text-lg font-normal opacity-75">Solicitudes de Vinculaci√≥n</span>
        </h1>
        <p class="mt-2 opacity-90">Gestiona las solicitudes de usuarios para vincular sus perfiles de jugador</p>
      </div>

      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
          <div class="bg-yellow-50 p-4 rounded-lg border border-yellow-200">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-yellow-400 rounded-lg flex items-center justify-center">
                  ‚è≥
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-yellow-800">Solicitudes Pendientes</p>
                <p class="text-2xl font-bold text-yellow-900"><%= @pending_requests.count %></p>
              </div>
            </div>
          </div>
          
          <div class="bg-green-50 p-4 rounded-lg border border-green-200">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-green-400 rounded-lg flex items-center justify-center">
                  ‚úÖ
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-green-800">Aprobadas Hoy</p>
                <p class="text-2xl font-bold text-green-900">
                  <%= UserPlayerRequest.approved.where(responded_at: Date.current.beginning_of_day..Date.current.end_of_day).count %>
                </p>
              </div>
            </div>
          </div>
          
          <div class="bg-red-50 p-4 rounded-lg border border-red-200">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-red-400 rounded-lg flex items-center justify-center">
                  ‚ùå
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm font-medium text-red-800">Rechazadas Hoy</p>
                <p class="text-2xl font-bold text-red-900">
                  <%= UserPlayerRequest.rejected.where(responded_at: Date.current.beginning_of_day..Date.current.end_of_day).count %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Solicitudes Pendientes -->
    <% if @pending_requests.any? %>
      <div class="bg-white rounded-lg shadow-md mb-8">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900 flex items-center">
            ‚è≥ Solicitudes Pendientes de Revisi√≥n
            <span class="ml-2 bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded-full">
              <%= @pending_requests.count %>
            </span>
          </h2>
        </div>
        
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jugador Solicitado</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mensaje</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @pending_requests.each do |request| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="flex-shrink-0 h-10 w-10">
                        <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                          <span class="text-sm font-medium text-gray-700">
                            <%= request.user.display_name.first.upcase %>
                          </span>
                        </div>
                      </div>
                      <div class="ml-4">
                        <div class="text-sm font-medium text-gray-900"><%= request.user.display_name %></div>
                        <div class="text-sm text-gray-500"><%= request.user.email %></div>
                      </div>
                    </div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900"><%= request.player_display_name %></div>
                    <div class="text-sm text-gray-500">ID: <%= request.player.id %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm text-gray-900 max-w-xs truncate" title="<%= request.message %>">
                      <%= request.message %>
                    </div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= request.requested_at.strftime('%d %b %Y, %H:%M') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                    <%= link_to admin_user_player_request_path(request), 
                                class: "text-indigo-600 hover:text-indigo-900 inline-flex items-center" do %>
                      üëÅ Ver Detalles
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-md mb-8">
        <div class="p-12 text-center">
          <div class="text-6xl mb-4">üéâ</div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">¬°No hay solicitudes pendientes!</h3>
          <p class="text-gray-600">Todas las solicitudes han sido procesadas.</p>
        </div>
      </div>
    <% end %>

    <!-- Historial Reciente -->
    <% if @recent_requests.any? %>
      <div class="bg-white rounded-lg shadow-md">
        <div class="p-6 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">üìã Historial Reciente</h2>
          <p class="text-sm text-gray-600 mt-1">√öltimas 20 solicitudes procesadas</p>
        </div>
        
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Estado</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Usuario</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Jugador</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fecha Procesada</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @recent_requests.each do |request| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if request.approved? %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                        ‚úÖ Aprobada
                      </span>
                    <% else %>
                      <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">
                        ‚ùå Rechazada
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900"><%= request.user.display_name %></div>
                    <div class="text-sm text-gray-500"><%= request.user.email %></div>
                  </td>
                  <td class="px-6 py-4">
                    <div class="text-sm font-medium text-gray-900"><%= request.player_display_name %></div>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= request.responded_at&.strftime('%d %b %Y, %H:%M') || 'N/A' %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to admin_user_player_request_path(request), 
                                class: "text-indigo-600 hover:text-indigo-900" do %>
                      Ver Detalles
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div> 