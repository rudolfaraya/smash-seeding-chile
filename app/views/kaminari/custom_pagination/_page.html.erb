<% if page.current? %>
  <span class="px-3 py-2 text-sm font-medium text-slate-50 bg-red-600 border border-red-500 rounded-md shadow-sm">
    <%= page %>
  </span>
<% else %>
  <%= link_to page, url, remote: remote, rel: (page.next? ? 'next' : (page.prev? ? 'prev' : nil)), 
      class: "px-3 py-2 text-sm font-medium text-slate-300 bg-slate-700 border border-slate-600 rounded-md hover:bg-slate-600 hover:text-slate-100 transition-colors duration-200",
      data: data %>
<% end %> 